<%- include('partials/head'); %>
<%- include('partials/nav'); %>
<div class="container">
   <h1> Edit Products </h1>

   <!-- Form: NEED TO CHANGE ACTION AND METHOD ATTRIBUTES-->
    <form action="./edit" method="PUT">

      <div class="py-2 pb-5">
         <select class="form-select pr-5" aria-label="Default select example">
            <option selected>Select a product to modify</option>
            <% if (products) { %> 
               <% for(var i=0; i < products.length; i++) { %>
                  <option value=<%= products[i]._id %>> <%= products[i].name %></option>
                  <% } %>
            <% } %>
         </select>
       </div>

      <!-- Product Name -->
      <div class="form-group">
        <label for="productName">Product name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Change product name">

      </div>

      <!-- Product Description -->
      <div class="form-group">
        <label for="productDescription">Description</label>
        <input type="text" class="form-control" id="desc" name="desc"  placeholder="Change product description">
      </div>

      <!-- Product Price -->
      <div class="form-group">
          <label for="productPrice">Price ($)</label>
          <input type=number step=any class="form-control" id="price" name="price" placeholder="Change product price, e.g. 3.50">
        </div>

      
      <!-- Add product button -->
      <div class="text-center d-flex justify-content-center">
         <div class="py-2">
            <button id="delete" type="submit" class="btn btn-danger">Delete</button>
            <button id="update" type="submit" class="btn btn-primary">Update</button>
          </div>
      </div>

  </form>
</div>
</body>
</html>