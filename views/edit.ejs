<%- include('partials/head'); %>
<%- include('partials/nav'); %>
<div class="container">
   <h1> Edit Products </h1>
   <div class="row products">
      
      <% if (products) { %> 
      <div id="accordion">
         <% for(var i=0; i < products.length; i++) { %>
         <div class="card">
            <div class="card-header" id="headingOne">
               <h5 class="mb-0">
                  <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <%= products[i].name %>
                  </button>
               </h5>
            </div>
            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
               <div class="card-body">
                  <!-- Form -->
                  <form action="./edit" method="PUT">
                  <form class="row gy-2 gx-3 align-items-center">

                     <!-- Product name -->
                     <div class="col-auto">
                        <label class="visually-hidden" for="autoSizingInput">Product name</label>
                        <input type="text" class="form-control" id="autoSizingInput" placeholder="Change product name">
                     </div>

                     <!-- Product description -->
                     <div class="col-auto">
                        <label class="visually-hidden" for="autoSizingInput">Description</label>
                        <input type="text" class="form-control" id="autoSizingInput" placeholder="Change product description">
                     </div>

                     <!-- Product price -->
                     <div class="col-auto">
                        <label class="visually-hidden" for="autoSizingInputGroup">Price</label>
                        <div class="input-group">
                           <div class="input-group-text">$</div>
                           <input type=number step=any class="form-control" id="autoSizingInputGroup" placeholder="Change product price, e.g. 3.50">
                        </div>
                     </div>
                     
                     <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Submit</button>
                     </div>
                  </form>
               </div>
            </div>
         </div>
         <% } %>
      </div>
      <% } else { %>
      Not working
      <% } %>
   </div>
</div>
</body>
</html>